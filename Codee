import tkinter as tk
from tkinter import ttk
from musico import Musico
from instrumento import Instrumento
from random import choice, randint

class BandaApp:
    def __init__(self, root):
        self.root = root
        self.root.title("Banda Musical")
        
        self.crear_banda_aleatoria_button = ttk.Button(root, text="Crear Banda Aleatoria", command=self.crear_banda_aleatoria)
        self.crear_banda_aleatoria_button.pack()
        
        self.instrumentos_folder = "instrumentos/"
        
        self.musico_label = ttk.Label(root, text="MÃºsicos:")
        self.musico_label.pack()
        self.musico_text = tk.Text(root, height=10, width=40)
        self.musico_text.pack()
        
    def crear_banda_aleatoria(self):
        instrumentos_disponibles = [Piano(), Flauta(), Guitarra(), Saxofon(), Bajo()]
        nombre_banda = "Banda Aleatoria"
        integrantes = []

        for i in range(0, randint(1, 5)):
            instrumento_random = choice(instrumentos_disponibles)
            musico = Musico("Musico"+str(i+1), instrumento_random)
            integrantes.append(musico)

        self.banda = Banda(nombre_banda, integrantes)
        
        self.actualizar_musico_text()
    
    def actualizar_musico_text(self):
        self.musico_text.delete(1.0, tk.END)
        if hasattr(self, 'banda'):
            for musico in self.banda.integrantes:
                self.musico_text.insert(tk.END, f"{musico.nombre} - {musico.instrumento_toca.nombre}\n")

if __name__ == "__main__":
    root = tk.Tk()
    app = BandaApp(root)
    root.mainloop()
