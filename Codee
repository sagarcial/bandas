import tkinter as tk
from banda import Banda
from instrumento import Piano, Guitarra, Saxofon, Bajo, Flauta

# Crear una instancia de la banda y músicos
mi_banda = Banda("Los Rítmicos", [Piano(), Guitarra(), Saxofon(), Bajo(), Flauta()])
mi_banda.crear()

# Función para afinar los instrumentos
def afinar_instrumentos():
    mi_banda.afinar_instrumentos()

# Función para mostrar la información de la banda
def mostrar_informacion():
    info_text.delete(1.0, tk.END)  # Limpiar el área de texto
    mi_banda.consultar()  # Consultar y mostrar información en el área de texto

# Crear la ventana de tkinter
root = tk.Tk()
root.title("Banda Musical")

# Crear botones y elementos de interfaz
afinar_button = tk.Button(root, text="Afinar Instrumentos", command=afinar_instrumentos)
info_button = tk.Button(root, text="Mostrar Información", command=mostrar_informacion)
info_text = tk.Text(root, width=40, height=10)

# Colocar los elementos en la ventana
afinar_button.pack()
info_button.pack()
info_text.pack()

# Iniciar la aplicación de tkinter
root.mainloop()
